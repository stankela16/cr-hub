<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dodaj Partnera</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/pocetna.css"> <!-- Ispravljena putanja za statički CSS -->
    <script>
        // Funkcija za prikazivanje greške
        function showError(message) {
            alert(message); // Koristi alert za prikazivanje poruke kao pop-up
        }

        window.onload = function() {
            <% if (typeof errors !== 'undefined' && Object.keys(errors).length > 0) { %>
                let errorMessages = "<%= Object.values(errors).join('\\n') %>";
                showError(errorMessages);
            <% } %>
        }
    </script>
</head>
<body>
    
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CR HUB</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Pocetna</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dodaj">Dodaj Partnera</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Provera za errors -->
    <% if (typeof errors === 'undefined') { %>
        <% errors = {}; %>
    <% } %>

    <!-- Form -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2"> <!-- Centriranje forme na većim ekranima -->
                <h2>Dodaj Partnera</h2>
                <form action="/putanja_za_dodavanje_partnera" method="post">
                    <div class="mb-3">
                        <label for="naziv" class="form-label">Ime kompanije:</label>
                        <input type="text" class="form-control <%= errors.naziv ? 'is-invalid' : '' %>" id="naziv" name="naziv" value="<%= partner.naziv || '' %>" required>
                        <% if (errors.naziv) { %>
                            <div class="invalid-feedback">
                                <%= errors.naziv %>
                            </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="kontaktOsoba" class="form-label">Kontakt osoba:</label>
                        <input type="text" class="form-control <%= errors.kontaktOsoba ? 'is-invalid' : '' %>" id="kontaktOsoba" name="kontaktOsoba" value="<%= partner.kontaktOsoba || '' %>" required>
                        <% if (errors.kontaktOsoba) { %>
                            <div class="invalid-feedback">
                                <%= errors.kontaktOsoba %>
                            </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="kontaktMejl" class="form-label">Kontakt mejl:</label>
                        <input type="email" class="form-control <%= errors.kontaktMejl ? 'is-invalid' : '' %>" id="kontaktMejl" name="kontaktMejl" value="<%= partner.kontaktMejl || '' %>" required>
                        <% if (errors.kontaktMejl) { %>
                            <div class="invalid-feedback">
                                <%= errors.kontaktMejl %>
                            </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="kontaktTelefon" class="form-label">Kontakt telefon:</label>
                        <input type="tel" class="form-control <%= errors.kontaktTelefon ? 'is-invalid' : '' %>" id="kontaktTelefon" name="kontaktTelefon" value="<%= partner.kontaktTelefon || '' %>" required>
                        <% if (errors.kontaktTelefon) { %>
                            <div class="invalid-feedback">
                                <%= errors.kontaktTelefon %>
                            </div>
                        <% } %>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
